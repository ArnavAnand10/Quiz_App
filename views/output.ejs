        <div class="container-fluid score-area" > 
            <h1>Your Score  <br> <%=number%> / <%=total%>  </h1> <br>
            <h1><%=quote%></h1>
        </div>
        <div class="row detail-row justify-content-center" >
            <div class="col-lg-4">  
                
                <i class="fa-solid fa-circle-xmark fa-4x" style="color: #f04747;"></i>
                <h3 style="margin-top: 20px;">Wrong</h3>
                <h1> <%=wrongList.length%></h1>
            
            </div>
            <div class="col-lg-4"> 
                <i class="fa-solid fa-circle-check fa-4x" style="color: #13ae5e;"></i>
                <h3 style="margin-top: 20px;"> Correct</h3>
                
                <h1> <%=number%></h1>
            </div>
            <div class="col-lg-4"> 
                <i class="fa-solid fa-bullseye fa-4x" style="color: #ff2954;"></i></i>
                <h3 style="margin-top: 20px;"> Accuracy</h3>
                
                <h1> <%=accuracy%>%</h1>
            </div>
        
            <div class="col-lg-4"> 
                <i class="fa-solid fa-list-check fa-4x" style="color: #29a2ff;"></i>
                <h3 style="margin-top: 20px;"> Total Questions</h3>
                <h1><%=total%></h1></div>
        </div>
        
        <form action="/restart" method="POST" style="text-align: center;">
            <button class="btn btn-lg btn-danger" type="submit">Restart</button>
        </form>
    
        <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
